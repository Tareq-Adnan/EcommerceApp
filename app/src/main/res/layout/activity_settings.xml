<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:background="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="22sp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#019F91"
            android:padding="5dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/UpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="#019F91"
            android:padding="5dp"
            />


    </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
    android:layout_below="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:src="@drawable/profile"
        android:layout_margin="10dp"
        android:background="@drawable/input_btn"
        android:padding="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Change Profile"
        android:textStyle="bold"
        android:layout_above="@id/name_change_btn"
        android:layout_centerInParent="true"
        android:layout_marginBottom="13dp"/>

    <EditText
        android:id="@+id/name_change_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_below="@id/profileImage"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:backgroundTint="#03A9F4"/>

    <EditText
        android:id="@+id/number_change_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_below="@id/name_change_btn"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:backgroundTint="#03A9F4"/>

    <EditText
        android:id="@+id/Address_change_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@id/number_change_btn"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:backgroundTint="#03A9F4"/>



</RelativeLayout>